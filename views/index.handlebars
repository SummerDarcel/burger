<div class="title">
  <h1>Eat-Da-Burger</h1>
</div>

<div class="content">
  <h2>Available Burgers!</h2>
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burgers-block devoured=false}}
    {{/unless}}
    {{/each}}
  </ul>

  <h2>Add a burger you want to eat!</h3>
    <form class="create-form">

      <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="burger_name">
      </div>

      <button type="submit">Submit</button>
    </form>
</div>